<header>
  <div class="top">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <ul class="topleft-info">
            <li><%= t "title" %></li>
          </ul>
        </div>
        <div class="col-md-6">
          <div id="sb-search" >
            <%= form_for :search do |f| %>
              <%= f.text_field :search, class: "sb-search-input",
                placeholder: t("search_holder") %>
              <%= f.submit :Search, class: "hidden sb-search-input" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>  
  
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to image_tag("guest.png", size: "100x100", alt: t("user")),
          "#", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse ">
        <ul class="nav navbar-nav">
          <li><%= link_to t("home"), root_path %></li>
          <li><%= link_to t("about"), root_path(page: :about) %></li>
          <li><%= link_to t("contact"), root_path(page: :contact) %></li>
          <% if logged_in? %>
            <li><%= link_to t("logout"), logout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
