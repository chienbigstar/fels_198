<ul class="list-word list-group">
  <li class="list-group-item active">
    <strong>
      <%= f.options[:child_index]+1 %>.
    </strong>
    <%= f.object.word.question %>
  </li>
  <% f.object.word.answers.each do |a| %>
    <% if itemCorrect? f.object, a %>
      <li class="list-group-item list-group-item-success">
        <%= f.radio_button :answer_id, a.id,
          checked: f.object.answer_id == a.id, disabled: true%>
        <%= a.content %>
      </li>
    <% elsif itemIncorrect? f.object, a %>
      <li class="list-group-item list-group-item-danger">
        <%= f.radio_button :answer_id, a.id,
          checked: f.object.answer_id == a.id, disabled: true%>
        <%= a.content %>
      </li>
    <% else %>
      <li class="list-group-item ">
        <%= f.radio_button :answer_id, a.id,
          checked: f.object.answer_id == a.id, disabled: false%>
        <%= a.content %>
      </li>
    <% end %>
  <% end %>
</ul>
