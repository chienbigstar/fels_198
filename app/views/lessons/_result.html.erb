<ul class="list-word list-group">
  <li class="list-group-item active">
    <strong>
      <%= f.options[:child_index]+1 %>.
    </strong>
    <%= f.object.word.question %>
  </li>
  <% f.object.word.answers.each do |a| %>
    <li class="list-group-item">
      <%= f.radio_button :answer_id, a.id,
        checked: f.object.answer_id == a.id, disabled: f.object.lesson.finish? %>
      <%= a.content %>
    </li>
  <% end %>
</ul>
