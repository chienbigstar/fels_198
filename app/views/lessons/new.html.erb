<div class="container content" >
  <div class="col-md-6 col-md-offset-2">
    <%= form_for @lesson, url: lessons_path do |f| %>
      <hr class="colorgraph">
      <%= render "shared/error_messages", object: @lesson %>
      <%= f.hidden_field :user_id, value: session[:user_id] %>
      <div class="form-group">
        <%= f.label :Category, class: "label label-default" %>
        <%= f.select :category_id, getCategories, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Level, class: "label label-default" %>
        <%= f.select :level_id, getLevel, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Duration, class: "label label-default" %>
        <%= f.select :duration, getDuration, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Question count", class: "label label-default" %>
        <%= f.select :question_count, getQuestionCount, class: "form-control" %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
