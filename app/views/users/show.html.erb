<% provide :title, @user.name %>
<div class="content col-md-10 col-md-offset-1" >
  <% if current_user.current_user? @user %>
    <div class="col-md-4 col-md-offset-4" >
      <div class="row">
          <%= link_to t(".link_my_lesson"), @user, class: "btn btn-danger btn-primary"%>
          <%= link_to t(".link_word_list"), "#", class: "btn btn-primary"%>
          <%= link_to t(".link_do_lesson"), new_lesson_path, class: "btn btn-primary"%>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th><%= t "category" %></th>
          <th><%= t "level" %></th>
          <th><%= t "duration" %></th>
          <th><%= t "question_count" %></th>
          <th><%= t "score" %></th>
          <th><%= t "status" %></th>
          <th><%= t "action" %></th>
        </tr>
      </thead>
      <tbody>
        <% @lessons.each do |l| %>
          <tr><%= render "lessons/lesson", object:l %></tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @lessons %>
  <% else %>
    <div class="col-md-6 col-md-offset-4">
      <%= image_tag @user.avatar, class: "media-left", size: Settings.avatar_size %>
      <h4><%= @user.name %></h4>
    </div>
    <div class="col-md-8 col-md-offset-1">
      <%= render "follow_form" %>
    </div>
  <% end %>
</div>
