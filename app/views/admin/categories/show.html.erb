<% provide :title, @category.name %>
<h1><%= @category.name %></h1>
<%= link_to t(".add_new_word") + @category.name, 
  new_admin_category_word_path(@category.id), class: "btn btn-primary" %>
<ul class="users">
  <% @words.each do |word| %>
    <li>
      <%= render word %>
    </li>
  <% end %>
</ul>
<%= will_paginate @words %>
