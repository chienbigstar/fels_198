body {
  background: url(<%= image_path "bg1.png" %>) repeat left top; 
  font-family:'Open Sans', Arial, sans-serif;
  font-size:14px;
  font-weight:300;
  line-height:1.6em;
  color: #656565;
}

a:active {
  outline:0;
}

.aligncenter{
  text-align:center;
}

.aligncenter span{
  margin-left:0;
}

.floatright {
  float:right;
}

.floatleft {
  float:left;
}

.floatnone {
  float:none;
}

.aligncenter {
  text-align:center;
}

.join-btn {
  text-align: center;
  padding:20px;
  margin-top:10px;
}

.btn-theme {
  border:1px solid #d9232d;
  background: #d9232d;
}

.clear {
  clear:both;
}

h1,h2, h3, h4, h5, h6 {
  font-family:'Roboto', sans-serif;
  font-weight:700;
  line-height:1.1em;
  color:#666;
  margin-bottom: 20px;
}

.highlight {
  color: #d9232d !important;
  padding: 0 8px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}

#wrapper {
  width:100%;
  margin:0; 
  padding:0;
}

.row,.row-fluid {
  margin-bottom:30px;
}

.row .row,.row-fluid .row-fluid{
  margin-bottom:30px;
}

.row.nomargin,.row-fluid.nomargin {
  margin-bottom:0;
}

header .top .row {
  margin-bottom: 0;
}

header .top {
  padding:20px 0;
  margin:0;
  background: #f2f2f2;
}

header .top {
  border-bottom: 1px solid #ddd;
}

header .top ul.topleft-info {
  list-style: none;
  margin: 10px 0 0;
  padding-left: 0;
  float:left;
}

header .top ul.topleft-info li {
  display: inline;
  margin: 0 20px 0 0;
  padding:0;
  font-weight: 600;
}

header .top ul.topleft-info li a:hover {
  text-decoration: none;
  outline: 0;
}

.sb-search-input {
  position: absolute;
  top: 0;
  right: 0;
  border: none;
  outline: none;
  background: #fff;
  width: 50%;
  height: 36px;
  margin: 0;
  z-index: 10;
  padding: 2px 41px 2px 10px;
  font-family: inherit;
  font-size: 14px;
  color: #2c3e50;
}

.sb-icon-search,
.sb-search-submit  {
  z-index: 9999 !important;
  width: 36px;
  height: 36px;
  display: block;
  position: absolute;
  right: 0;
  top: 0;
  padding: 0;
  margin: 0;
  line-height: 36px;
  text-align: center;
  cursor: pointer;
}

.sb-search.sb-search-open .sb-icon-search,
.no-js .sb-search .sb-icon-search {
  background: #666;
  color: #fff;
  z-index: 11;
}

header .navbar {
    margin-bottom: 0;
}

.navbar-default {
    border: none;
}

.navbar-brand {
  color: #222;
  text-transform: uppercase;
  font-size: 24px;
  font-weight: 700;
  line-height: 1em;
  letter-spacing: -1px;
  margin-top: 30px;
  padding: 0 0 0 15px;
}

header .navbar-collapse  ul.navbar-nav {
  float: right;
  margin-right: 0;
}

header .navbar-default{
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}

header .navbar {
  min-height: 100px;
}

header .navbar-nav > li  {
  padding-bottom: 30px;
  padding-top: 30px;
}

header  .navbar-nav > li > a {
  padding-bottom: 6px;
  padding-top: 5px;
  margin-left: 2px;
  line-height: 30px;
  font-weight: 700;
  -webkit-transition: all .3s ease;
  -moz-transition: all .3s ease;
  -ms-transition: all .3s ease;
  -o-transition: all .3s ease;
  transition: all .3s ease;
}

header .nav .caret {
  border-bottom-color: #f5f5f5;
  border-top-color: #f5f5f5;
}

#content {
  position:relative;
  background:#fff;
  padding:60px 0 40px 0;
}

form#contactform input[type="text"] {
  width: 100%;
  border: 1px solid #f5f5f5;
  min-height: 40px;
  padding-left:20px;
  font-size:13px;
  padding-right:20px;
  -webkit-box-sizing: border-box;
 -moz-box-sizing: border-box;
  box-sizing: border-box;
}
